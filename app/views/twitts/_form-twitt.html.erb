<%= form_with model: @twitt do |f| %>
     <div class="card border-white">
        <%= f.text_area :body, required: true, maxlength: 255, placeholder: "New post", class: "card-body border-0 border-light" %>
     </div>

      <div class="mt-2">
        <%= link_to 'Back', :back, class: "btn btn-outline-info" %>
        <%= f.submit 'Save post', class: "btn btn-outline-info" %>
      </div>
<% end %>